entrypoint = "main.py"
modules = ["nodejs-20", "python-3.11", "postgresql-16"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-23_05"
packages = ["freetype", "gumbo", "harfbuzz", "jbig2dec", "libjpeg_turbo", "mupdf", "openjpeg", "postgresql", "swig", "xcbuild", "doppler"]

[unitTest]
language = "python3"

[deployment]
run = ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "5000"]
deploymentTarget = "autoscale"

[agent]
expertMode = true
integrations = ["python_anthropic_ai_integrations:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "doppler run --project docsense --config dev --preserve-env -- uvicorn src.api.main:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "doppler run --project docsense --config dev --preserve-env -- bash -c \"cd client && npm run dev\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
