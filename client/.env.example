# Trading Algorithm Document Analyzer - Frontend Environment Variables
#
# INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your values
# 3. IMPORTANT: Only use VITE_ prefix for variables that should be exposed to the browser
# 4. NEVER put secrets or API keys here - all sensitive data must stay on the backend
#
# See docs/decisions/012-doppler-secret-management.md for security guidelines

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API URL (defaults to /api for proxy in development)
# Development: /api (proxied by Vite to localhost:8000)
# Production: https://api.yourdomain.com
VITE_API_URL=/api

# API version
VITE_API_VERSION=v1

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application name
VITE_APP_NAME=DocSense

# Application environment
VITE_ENVIRONMENT=development

# Enable debug mode
VITE_DEBUG=false

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# Enable chat feature
VITE_ENABLE_CHAT=true

# Enable parameter graph visualization
VITE_ENABLE_GRAPH=true

# Enable AI analysis logs
VITE_ENABLE_AI_LOGS=true

# ============================================================================
# ANALYTICS AND MONITORING (Optional)
# ============================================================================

# Google Analytics ID (if using)
VITE_GA_ID=

# Sentry DSN for frontend error tracking (if using)
VITE_SENTRY_DSN=

# Enable analytics
VITE_ANALYTICS_ENABLED=false

# ============================================================================
# UI CONFIGURATION (Optional)
# ============================================================================

# Default theme: light, dark, system
VITE_DEFAULT_THEME=system

# Enable theme switcher
VITE_ENABLE_THEME_SWITCHER=true

# Max file upload size in MB
VITE_MAX_UPLOAD_SIZE_MB=10

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Show development tools
VITE_SHOW_DEV_TOOLS=false

# Enable React Query Devtools
VITE_ENABLE_QUERY_DEVTOOLS=false

# ============================================================================
# SECURITY NOTES
# ============================================================================
#
# WARNING: Any variable prefixed with VITE_ will be exposed to the browser!
#
# DO NOT ADD:
# - API keys or tokens
# - Database credentials
# - Private keys
# - Secrets of any kind
#
# All sensitive operations must be handled by the backend API.
# The frontend should only contain non-sensitive configuration.
#
